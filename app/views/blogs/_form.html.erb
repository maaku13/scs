<%= form_with(model: blog, local: true, class: "form-horizontal") do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class:"col-lg-2 control-label" %>
    <div class="col-lg-10">
        <%= form.text_field :name, id: :blog_name, class:"form-control", placeholder: "Name" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :counter, class:"col-lg-2 control-label" %>
    <div class="col-lg-10">
        <%= form.number_field :counter, id: :blog_counter, class:"form-control", placeholder: "Counter" %>
    </div>
  </div>

  <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= form.submit class:"btn btn-primary btn-sm" %>
      </div>
  </div>
<% end %>