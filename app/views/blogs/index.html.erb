<% if notice %>
<p id="notice">
<br>
<div class="alert alert-dismissible alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= notice %>
</div>
</p>
<% end %>

<h1>Blogs</h1>

<%= link_to 'New Blog', new_blog_path, class: "btn btn-primary btn-sm" %>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Counter</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.name %></td>
        <td><%= blog.counter %></td>
        <td><%= blog.created_at %></td>
        <td><%= blog.updated_at %></td>
        <td><%= link_to 'Show', blog, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>