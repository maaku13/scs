<br><br>
<% if notice %>
<p id="notice">
<br><br>
<div class="alert alert-dismissible alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= notice %>
</div>
</p>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Back', posts_path, class:"btn btn-default btn-sm" %>
<%= link_to 'Edit', edit_post_path(@post), class:"btn btn-primary btn-sm" %>