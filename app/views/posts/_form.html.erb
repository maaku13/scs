<%= form_with(model: post, local: true, class: "form-horizontal") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class:"col-lg-2 control-label" %>
    <div class="col-lg-10">
        <%= form.text_field :name, id: :post_name, class:"form-control", placeholder: "Name" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :title, class:"col-lg-2 control-label" %>
    <div class="col-lg-10">
        <%= form.text_field :title, id: :post_title, class:"form-control", placeholder: "Title" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :body, class:"col-lg-2 control-label" %>
    <div class="col-lg-10">
        <%= form.text_area :body, id: :post_body, class:"form-control", placeholder: "Body" %>
    </div>
  </div>

  <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <!-- <%= link_to 'Back', posts_path, class:"btn btn-default btn-sm" %> -->
        <%= form.submit class:"btn btn-primary btn-sm" %>
      </div>
  </div>
<% end %>
